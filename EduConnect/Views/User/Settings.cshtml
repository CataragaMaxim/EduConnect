@{
     ViewBag.Title = "Setari Profil";
}
@model EduConnect.Models.UserSettingsVM

<section class="section bg-light">
     <div class="container">
          <h2 class="mb-4">Setari cont</h2>

          @if (!string.IsNullOrEmpty(Model.Message))
          {
               <div class="alert alert-info">@Model.Message</div>
          }

          @using (Html.BeginForm("Settings", "User", FormMethod.Post))
          {
               <div class="form-group">
                    <label for="Username">Username</label>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Noul username" })
               </div>

               <div class="form-group">
                    <label for="Email">Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nou email" })
               </div>

               <hr />
               <h4>Schimbare parola</h4>

               <div class="form-group">
                    <label for="CurrentPassword">Parola curenta</label>
                    @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", placeholder = "Parola curenta" })
               </div>

               <div class="form-group">
                    <label for="NewPassword">Parola noua</label>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Parola noua (minim 8 caractere)" })
               </div>

               <button type="submit" class="btn btn-primary">Salveaza modificarile</button>
          }
     </div>
</section>
