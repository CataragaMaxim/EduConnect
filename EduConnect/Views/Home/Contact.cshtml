<!-- contact start -->
<section class="section">
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="pe-7s-phone h2 text-primary"></i>
                        </div>
                        <h4>Phone</h4>
                        <p class="text-muted mb-0">(+373) 278-278</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="pe-7s-mail h2 text-primary"></i>
                        </div>
                        <h4>E - mail</h4>
                        <p class="text-muted mb-0">eForum@gmail.com</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="pe-7s-global h2 text-primary"></i>
                        </div>
                        <h4>Web</h4>
                        <p class="text-muted mb-0">eForum.com</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="pe-7s-map-marker h2 text-primary"></i>
                        </div>
                        <h4>Address</h4>
                        <p class="text-muted mb-0">Strada Studentilor 7, MD-2012, Chisinau, Moldova</p>

                    </div>
                </div>
            </div>

        </div>
        <!-- end row -->

        <div class="row">
            <div class="col-lg-5">
                <div class="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d6030.418742494061!2d-111.34563870463673!3d26.01036670629853!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses-419!2smx!4v1471908546569" allowfullscreen></iframe>
                </div>

            </div>
            <div class="col-lg-7">
                <div class="custom-form bg-white">
                    <div id="message"></div>
                    <form method="post" action="php/contact.php" name="contact-form" id="contact-form">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="name">Nume</label>
                                    <input name="name" id="name" type="text" class="form-control" placeholder="Introduceti numele dvs...">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="email">Adresa de e-mail</label>
                                    <input name="email" id="email" type="email" class="form-control" placeholder="Introdceti adresa dvs. de e-mail...">
                                </div>
                            </div>
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="subject">Subiect</label>
                                    <input name="subject" id="subject" type="text" class="form-control" placeholder="Introduceti subiectul...">
                                </div>
                            </div>
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="comments">Mesaj</label>
                                    <textarea name="comments" id="comments" rows="4" class="form-control" placeholder="Introdceti mesajul dvs..."></textarea>
                                </div>
                            </div>
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-lg-12 text-right">
                                <input type="submit" id="submit" name="send" class="submitBnt btn btn-purple" value="Trimite mesaj">
                                <div id="simple-msg"></div>
                            </div>
                        </div>
                        <!-- end row -->
                    </form>
                </div>
                <!-- end custom-form -->


            </div>
        </div>
    </div>
    <!-- end container-fluid -->
</section>
<!-- contact end -->